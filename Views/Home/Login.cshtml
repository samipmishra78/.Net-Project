@model student.Models.StdDetail
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="d-flex justify-content-center align-items-center" style="height: 100vh; background-color: #eee;">
    <div class="container">
      
        <div class="row justify-content-center">
            <div class="col-xl-6">
                <div class="card rounded-3 text-black">
                    <div class="row g-0 justify-content-center">
                        <div class="col-lg-12">
                            <div class="card-body p-md-5 mx-md-4">
                                @{
                                    if (ViewBag.Message != null)
                                    {
                                        <p style="color:red;">@ViewBag.Message</p>
                                    }
                                    if (TempData["Success"] != null)
                                    {
                                        <p style="color:green">@TempData["Success"]</p>
                                    }
                                    else
                                    {}

                                }
                                <div class="text-center">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                                         style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">We are The Lotus Team</h4>
                                </div>

                                
                                <form asp-controller="Home" asp-action="Login" >
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    @* <p>Please login to your account</p> *@

                                    <label class="form-label" for="form2Example11">Username</label>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="Email" id="form2Example11" class="form-control"
                                               placeholder="Phone number or email address" />
                                        <span asp-validation-for="Email" style="color:red"></span>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="form-label" for="form2Example22">Password</label>
                                        <input asp-for="Password" id="form2Example22" class="form-control" />
                                        <span asp-validation-for="Password" style="color:red"></span>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <div class="form-group">
                                            <input data-mdb-button-init data-mdb-ripple-init type="submit" value="Login" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" />
                                        </div>
                                        @*    <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit" value="create">
                                            Log in
                                        </button> *@
                                        <br />
                                        @* <a class="text-muted" href="">Forgot password?</a> *@
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Don't have an account?</p>
                                        <button asp-action="CreateNew" asp-controller="Home" type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-danger">Create new</button>
                                    </div>

                                </form>

                            </div>
                        </div>

                        @* Original right-side content is commented out and untouched *@
                        @* <div class="col-lg-6 d-flex align-items-center gradient-custom-2"> ... *@

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
